/* La funzione projectAdjCG(real[int,int]& xx) proietta un vettore soluzione su Uab
 * NB - se il risultato di questa funzione NON deve essere un in-put per StateCG
 * 		l'operazione di proiezione deve essere fatta all'interno di StateCG, quando si crea la matrice,
 * 		per minimizzare l'errore di approssimazione della soluzione 
 */
func real[int,int] projectAdjCG(real[int,int]& xx)
{
	real[int,int] tmp(nsol,Ph.ndof);
	
	//calcolo Sh^*l
	tmp = adjCG(xx);
	//molitiplico per (-1./alpha)
	tmp = tmp*(-1./alpha);
	//proietto su [a,b]
	tmp = PUabMatrixPh(tmp,dofPh);
	
	return tmp;
}

/* La funzione rightCG risolve il termine a destra dell'equazione
 *  ( I + (1/alpha)*ShIAd)dl = - (l+yd) + ShP[a,b](-(1/alpha)Ad(l))
 * necessaria per il primo passo dell'algortitmo Damped Newton
 */
func real[int,int] rightCG(real[int,int]& xx)
{
	real[int,int] righthandCG(nsol,Yh.ndof);
	real[int,int] tmp(nsol,Ph.ndof);
	
	//calcolo Ad(l)
	tmp = adjCG(xx);
	//molitiplico per (-1./alpha)
	tmp = tmp*(-1./alpha);
	//calcolo Sh(tmp)
	righthandCG = stateCG2(tmp);
	
	real savet=t;
	t=dt;
	
	// Per calcolare correttamente wd devo iterare nel tempo
	for(int i=0; i<nsol; i++)
	{
		righthandCG(i,:) = (-1.)*xx(i,:)  + tmp(i,:);
		righthandCG(i,:) = - wd;
		t = t+dt;
	}
	
	t=savet;
	
	return righthandCG;
}

/* La funzione mat1 risolve la prima parte del termine a sinsitra dell'equazione
 *  ( I + (1/alpha)*Sh(I(Ad)))dl = - (l+yd) + ShP[a,b](-(1/alpha)Ad(l))
 * necessaria per il primo passo dell'algortitmo Damped Newton
 * in particolare viene risolto il passo Sh(I(xx))
 */
func real[int,int] mat1(real[int,int] &xx, real[int,int] &ww) 
{
	Ph listate,loldstate;
    Yh indold,indnew;
	varf tnnew(w,wtest) =  int2d(Th)( wold*wtest/dt) 
		  				 - int2d(Th)( gamma2*( dx(wold)*dx(wtest) + dy(wold)*dy(wtest) ) ) 
							 /*introduco la funzione indicatrice nella varf
							  * (indnew(x,y)<=b)*(indnew(x,y)>=a) == 1 se entrambe le condizioni sono rispettate 
							  *									  == 0 altrimenti
							  */	
					     + int2d(Th)(gamma3*((indnew(x,y)<=b)*(indnew(x,y)>=a)*listate*wtest))
						 + int2d(Th)(gamma4*((indold(x,y)<=b)*(indold(x,y)>=a)*loldstate*wtest));
	
	real[int] tmp(Yh.ndof);
	real[int,int] stateSolCG(nsol,Yh.ndof);
	
	wold=w0;
	
	//Primo passo di EI con passo temporale dt/2
    setscheme(0);
	
	loldstate[]=xx(0,:);
    listate[]=xx(1,:);
	indold[]=ww(0,:);
	indnew[]=ww(1,:);
	
	S=s(Yh,Yh,solver=GMRES);
	statebc=s(0,Yh);

    tmp=tnnew(0,Yh);
    tmp=tmp+statebc;
	
	w[]=(S^-1)*tmp;
	stateSolCG(0,:)=w[];
	wold=w;
	loldstate=listate;
	indold=indnew;
	
	//inizio coi passi di CN
    setscheme(1);
	for(int i=1; i<nsol-1; i++)
	{	
		listate[] = xx(i+1,:);
		indnew[]=ww(i+1,:);
	
		tmp = tnnew(0,Yh);
		tmp += statebc;
		
		w[] = S^-1*tmp;
		stateSolCG(i,:)=w[];
		
		wold=w;
		loldstate = listate;
		indold=indnew;

	}
	
	//Ultimo passo di EA con passo temporale dt/2
    setscheme(2);
	
	S=s(Yh,Yh);
	tmp = tnnew(0,Yh);
	tmp += statebc;
	w[] = S^-1*tmp;
	
	stateSolCG(nsol-1,:)=w[];
	
	return stateSolCG;
}
	
/* La funzione mat1 risolve il termine a sinsitra dell'equazione
 *  ( I + (1/alpha)*ShIAd)dl = - (l+yd) + ShP[a,b](-(1/alpha)Ad(l))
 * necessaria per il primo passo dell'algortitmo Damped Newton
 */	
func real[int,int] mat2(real[int,int] &ww, real[int,int] &xx)
{
	real[int,int] res(nsol,Yh.ndof);
	real[int,int] pro(nsol,Yh.ndof);
	
	pro=adjCG(xx);
	
	res=mat1(ww,pro);
	res=(1./alpha)*res;
	res=res+xx;
	
	return res;
}

func real phi(real[int,int]& xx)
{
	real tmp,savet=t, normu;
	real[int,int] uw(nsol,Ph.ndof), tmp2(nsol,Yh.ndof);
	
	uw = adjCG(xx);
	uw *= (-1./alpha);
	
	tmp2 = stateCG2(xx);
	
	t=dt;
	for( int i=0; i<Yh.ndof; i++)
	{
		tmp2(i,:) = (-1.)*tmp2(i,:);
		tmp2(i,:) += wd;
		t+=dt;
	}
	t=savet;
	
	tmp = (normL2Yh(xx))^2/2.;
	tmp += (-alpha/2.)*(normL2u(uw))^2;
	tmp += prodottoL2(xx, tmp2);
	
	return tmp;
}


func real[int,int] CG(real[int,int]& xx, real[int,int]& ww)
{
	real[int,int] r(nsol,Yh.ndof), rold(nsol,Yh.ndof);
	real[int,int] pk(nsol,Yh.ndof), pkold(nsol,Yh.ndof);
	real[int,int] A(nsol,Yh.ndof), Apk(nsol,Yh.ndof);
	
	real betaCG=0., alphaCG, eps=1e02;
	int k=0;
	
	A=mat2(xx,ww);
	
	r = rightCG(ww);
	r -= A;
	
	pkold = r;
	
	while( prodottoL2(r,r) < eps )
	{
		if( k!= 0)
		{
			betaCG = prodottoL2(r,r)/prodottoL2(rold,rold);
		}
	
		pk = pkold ;
		pk *= betaCG;
		pk += r;
	
		Apk = mat2(pk,ww);
	
		alphaCG = prodottoL2(r,r)/prodottoL2(pk,Apk);
	
		xx += alphaCG*pk;
	
		rold = r;
		r -= alphaCG*pk;
		k++;  
	}
	
	return xx;
}

func real[int,int] DampedNewton(real[int,int]& xx)
{
	real lambdaDN = 1., betaDN = 0.8;
	
	real[int,int] uw(nsol,Ph.ndof);
	real[int,int] deltal(nsol,Yh.ndof);
	real[int,int] l(nsol,Yh.ndof), tmp(nsol,Yh.ndof), tmp3(nsol,Ph.ndof) ;
	
	real tmp2;
	
	tmp = l;
	tmp += deltal*lambdaDN;
	
	tmp3 = rightCG(l);
	tmp3 *= -1.;
	
	tmp2 = prodottoL2( tmp3, deltal);
	tmp2 *= lambdaDN/3.;
	tmp2 += phi(l);
	
	if( phi(tmp) > tmp2 )
	{
		lambdaDN = lambdaDN*betaDN;
	}
	
	l += lambdaDN*deltal;
	
	return l;
}












