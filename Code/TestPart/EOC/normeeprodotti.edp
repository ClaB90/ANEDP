func real prodottoL2(real[int,int]& xx, real[int,int]& ww)
{
	real tmp=0;
	
	Yh x1,x2,x3,x4,x5,x6;
	
	for(int i=0; i< nsol-1; i++)
	{
		x1[] = xx(i,:);
		x2[] = ww(i,:);
		x3[] = xx(i+1,:);
		x4[] = ww(i+1,:);
		x5=(x1+x3)/2.;
		x6=(x2+x4)/2.;
		
		tmp += dt*(int2d(Th)(x1*x2)); 
	}
	
	return tmp;
}

