func real normL2Yh(real[int,int]& xx)
{
	real tmp=0;
	
	Yh x1,x2,x3;
	
	for(int i=0; i< nsol-1; i++)
	{
		x1[] = xx(i,:);
		x2[] = xx(i+1,:);
		x3=(x1+x2)/2.;
		tmp += dt*(int2d(Th)(x1^2)); 
	    
	}
	
	tmp = sqrt(tmp);
	
	return tmp;
}

